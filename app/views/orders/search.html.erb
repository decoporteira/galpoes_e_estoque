<h1>Resultados da buscar por: <%= @code%></h1>
<% if @orders_search.nil? %>
  <p>NÃ£o foi encontrado nenhum pedido para a sua busca.</p>
<% else %>
  <p><%= @orders_search.count %> <%= Order.model_name.human(count: @orders_search.count) %> <%=I18n.translate(:found, count: @orders_search.count)%>.</p>
  <%@orders_search.each do |order| %>
    <dl>
      <dt><%= Order.human_attribute_name(:code)%>: </dt>
      <dd><%= order.code %></dd>
      <dt><%= Order.human_attribute_name(:warehouse_id)%>:</dt>
      <dd><%= order.warehouse.name %></dd>
      <dt><%= Order.human_attribute_name(:supplier_id)%>:</dt>
      <dd><%= order.supplier.brand_name %></dd>
    </dl>
  <% end %>
<% end %>
